<!DOCTYPE html>
<html>
<head>
    @model HostModel
</head>
<body>
    <h2>Informações para importação no chip</h2>

    <h3>Score de periculosidade:  @Model.DangerScore</h3>

    <h6>Força: @Model.Force  Inteligência: @Model.Intelligence  Velocidade: @Model.Velocity</h6>

    <canvas id="barChart" width="200" height="100"></canvas>
    <br />

    <h3>Defesa: </h3>
    <br />

    <section class="ataque-defesa">
        @if (Model.Force <= 50 && Model.Intelligence <= 60 && Model.Velocity <= 60)
        {
            <img src="~/image/modo-flash.jpeg" alt="Modo Flash">
        }
        @if (Model.Force > 50)
        {
            <img src="~/image/escudo.jpeg" alt="Escudo Anti-Força">
        }
        @if (Model.Intelligence > 60)
        {
            <img src="~/image/camuflagem.jpeg" alt="Camuflagem Inteligente">
        }
        @if (Model.Velocity > 60)
        {
            <img src="~/image/voo-evasivo.jpeg" alt="Voo Evasivo">
        }
    </section>

    <br />
    <h3>Ataque: </h3>
    <br />
    <section class="ataque-defesa">
        @if (Model.Force <= 50 && Model.Intelligence <= 60 && Model.Velocity <= 60)
        {
            <img src="~/image/investida-simples.jpeg" alt="Investida Simples">
        }
        @if (Model.Force > 50)
        {
            <img src="~/image/investida-grupo.jpeg" alt="Investida em Grupo">
        }
        @if (Model.Intelligence > 60)
        {
            <img src="~/image/armadilha-surpresa.jpeg" alt="Armadilha Surpresa">
        }
        @if (Model.Velocity > 60)
        {
            <img src="~/image/jato-agua.jpeg" alt="Jato d'Água'">
        }
    </section>

    

    <script>
        var forceValue = parseFloat("@Model.Force") || 0;
        var intelligenceValue = parseFloat("@Model.Intelligence") || 0;
        var velocityValue = parseFloat("@Model.Velocity") || 0;
        var dangerScore = parseFloat("@Model.DangerScore") || 0;

        var ctx = document.getElementById('barChart').getContext('2d');

        var data = {
            labels: ['Periculosidade', 'Força', 'Inteligência', 'Velocidade'],
            datasets: [{
                label: 'Valores',
                data: [dangerScore, forceValue, intelligenceValue, velocityValue],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.5)',
                    'rgba(54, 162, 235, 0.5)',
                    'rgba(75, 192, 192, 0.5)',
                    'rgba(255, 205, 86, 0.5)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(255, 205, 86, 1)'
                ],
                borderWidth: 1
            }]
        };

        var options = {
            scales: {
                y: {
                    beginAtZero: true,
                    max: 100
                }
            }
        };

        var barChart = new Chart(ctx, {
            type: 'bar',
            data: data,
            options: options
        });
    </script>
</body>
</html>