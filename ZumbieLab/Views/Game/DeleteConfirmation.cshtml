@using ZumbieLab.Models;
<!DOCTYPE html>
<html>
    <head>
        @model GameModel
        @{
            ViewData["Title"] = "Confirmação excluir jogo";
        }
    </head>
    <body>
        <div class="text-center">
            <h3>Realmente deseja excluir o jogo (@Model.Name)?</h3>

            <a class="btn btn-primary d-block w-100 mb-3" asp-controller="Game" asp-action="Delete" asp-route-id="@Model.Id">Confirmar</a>
            <a class="btn btn-danger d-block w-100 mb-3" asp-controller="Game" asp-action="Index">Cancelar</a>
        </div>
    </body>
</html>