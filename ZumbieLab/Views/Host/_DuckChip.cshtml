<!DOCTYPE html>
<html>
<head>
    @model HostModel
</head>
<body>
    <h2>Informações para importação no chip</h2>

    <h3>Score de periculosidade:  @Model.DangerScore</h3>

    <h6>Força: @Model.Force  Inteligência: @Model.Intelligence  Velocidade: @Model.Velocity</h6>

    <canvas id="barChart" width="200" height="100"></canvas>

    <h3>Defesa:</h3>

    <script>
        var forceValue = parseFloat("@Model.Force") || 0;
        var intelligenceValue = parseFloat("@Model.Intelligence") || 0;
        var velocityValue = parseFloat("@Model.Velocity") || 0;
        var dangerScore = parseFloat("@Model.DangerScore") || 0;

        var ctx = document.getElementById('barChart').getContext('2d');

        var data = {
            labels: ['Periculosidade', 'Força', 'Inteligência', 'Velocidade'],
            datasets: [{
                label: 'Valores',
                data: [dangerScore, forceValue, intelligenceValue, velocityValue],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.5)',
                    'rgba(54, 162, 235, 0.5)',
                    'rgba(75, 192, 192, 0.5)',
                    'rgba(255, 205, 86, 0.5)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(255, 205, 86, 1)'
                ],
                borderWidth: 1
            }]
        };

        var options = {
            scales: {
                y: {
                    beginAtZero: true,
                    max: 100
                }
            }
        };

        var barChart = new Chart(ctx, {
            type: 'bar',
            data: data,
            options: options
        });
    </script>
</body>
</html>