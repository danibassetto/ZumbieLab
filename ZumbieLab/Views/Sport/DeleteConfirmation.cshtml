@using ZumbieLab.Models;
<!DOCTYPE html>
<html>
    <head>
        @model SportModel
        @{
            ViewData["Title"] = "Confirmação excluir esporte";
        }
    </head>
    <body>
        <div class="text-center">
            <h3>Realmente deseja excluir o esporte (@Model.Description)?</h3>

            <a class="btn btn-primary d-block w-100 mb-3" asp-controller="Sport" asp-action="Delete" asp-route-id="@Model.Id">Confirmar</a>
            <a class="btn btn-danger d-block w-100 mb-3" asp-controller="Sport" asp-action="Index">Cancelar</a>
        </div>
    </body>
</html>